<h1>Great Idea..</h1>

<h2><%= @idea.title %></h2>

<p><%= @idea.description %></p>

<%= link_to "Edit", edit_idea_path(@idea) %>
<%= link_to "Delete", idea_path(@idea), method: :delete, data: { confirm: "Are you sure?"} %>

<hr>

<h3>Add a review:</h3>

<%= form_with model: [@idea, @review], local: true do |f| %>
  <div>
    <%= f.text_area :body, size: '50x5', placeholder: "Your thoughts..." %>
  </div>
  <%= f.submit %>
<% end %>

<br>
<br>

<h4>What others think of this idea</h4>
<% @reviews.each do |review| %>
    <div>
      <p><%= review.body %></p>
    </div>

    <%= link_to 'Delete', idea_review_path(@idea, review), method: :delete, data: { confirm: 'Are you sure you want to delete this review?'} %>
<% end %>




